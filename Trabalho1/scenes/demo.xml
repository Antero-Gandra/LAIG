<yas>

    <scene root="root" axis_length="5" />

    <views default="perspective">
        <perspective id="perspective" near="1" far="100" angle="0">
            <from x="20" y="20" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="ortho" near="1" far="100" left="-10" right="10" top="-10" bottom="10" />
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0.5" g="0.8" b="1" a="1" />
    </ambient>

    <lights>
        <omni id="omni" enabled="true">
            <location x="5" y="5" z="5" w="0" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="0" g="0" b="0" a="1" />
        </omni>

        <spot id="spot" enabled="false" angle="30" exponent="1">
            <location x="5" y="0" z="5" w="0" />
            <target x="0" y="0" z="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1" />
            <specular r="0" g="0" b="0" a="1" />
        </spot>
    </lights>

    <textures>
        <texture id="board" file="images/board.jpg" />
        <texture id="metal" file="images/metal.jpg" />
    </textures>

    <materials>
        <material id="ringMat" shininess = "1">
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="1" g="0.2" b="0.2" a="0" />
            <diffuse r="1" g="0.2" b="0.2" a="0" />
            <specular r="1" g="0.2" b="0.2" a="0" />
        </material>
    </materials>

    <transformations>
        <transformation id="trans">
            <translate x="0" y="0" z="2" />
            <rotate axis="x" angle="90" />
            <scale x="1" y="1" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="-1" y1="0" z1="0" x2="0" y2="1" z2="0" x3="1" y3="0" z3="0" />
        </primitive>

        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="20" stacks="1" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="torus">
            <torus inner="1" outer="1.2" slices="20" loops="20" />
        </primitive>
    </primitives>

    <components>

        <!-- Board with the base, post and the top for the backboard -->
        <component id="board">
            <transformation>
                <translate x="1" y="0" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <texture id="metal" length_s="1" length_t="1" />
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="base" />
                <componentref id="post" />
                <componentref id="top" />
            </children>
        </component>

        <component id="base">
            <transformation>
                <translate x="0" y="0" z="0" />
                <rotate axis="x" angle="-90" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>

        <component id="post">
            <transformation>
                <translate x="0" y="0" z="-2" />
                <rotate axis="x" angle="0" />
                <scale x="0.1" y="0.1" z="4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <!-- Top with the ring and proper backboard -->
        <component id="top">
            <transformation>
                <translate x="0" y="0" z="-4" />
                <rotate axis="x" angle="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="ring" />
                <componentref id="backboard" />
            </children>
        </component>

        <component id="ring">
            <transformation>
                <translate x="0" y="0.4" z="0" />
                <rotate axis="x" angle="0" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="ringMat" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="backboard">
            <transformation>
                <translate x="0" y="0" z="-0.6" />
                <rotate axis="z" angle="90" />
                <rotate axis="y" angle="90" />
                <rotate axis="z" angle="180" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="board" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

    </components>

</yas>